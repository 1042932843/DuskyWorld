<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/dp_12"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="本周热门"
            android:layout_alignParentStart="true"
            android:textColor="@color/colorText"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="近期更新"
            android:layout_alignParentEnd="true"
            android:textColor="@color/colorText"
            android:layout_centerVertical="true"
            android:textSize="@dimen/sp_12"/>
    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/mygray"
        app:contentPadding="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_16"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_4"
            >
            <ImageView
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_32"
                android:src="@drawable/icon_medal"
                android:layout_centerVertical="true"
                android:id="@+id/medal1"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/medal1"
                android:layout_centerVertical="true">
                <TextView
                    android:id="@+id/title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorText"
                    android:text="楚门的世界：假如你的人生是一场真人秀"
                    android:textSize="@dimen/sp_14"
                    />
                <TextView
                    android:id="@+id/expnum1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorHint"
                    android:text="2.5万阅读"
                    android:layout_below="@+id/title1"
                    android:textSize="@dimen/sp_12"
                    />
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_4">
            <ImageView
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_32"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_medal"
                android:id="@+id/medal2"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/medal2"
                android:layout_centerVertical="true">
                <TextView
                    android:id="@+id/title2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorText"
                    android:text="被解救的蒋哥"
                    android:textSize="@dimen/sp_14"
                    />
                <TextView
                    android:id="@+id/expnum2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorHint"
                    android:text="1.5万阅读"
                    android:layout_below="@+id/title2"
                    android:textSize="@dimen/sp_12"
                    />
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_4">
            <ImageView
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_32"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_medal"
                android:id="@+id/medal3"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/medal3"
                android:layout_centerVertical="true">
                <TextView
                    android:id="@+id/title3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorText"
                    android:text="豆瓣9.0，这几部电影中的经典角色值几个亿"
                    android:textSize="@dimen/sp_14"
                    />
                <TextView
                    android:id="@+id/expnum3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorHint"
                    android:text="1万阅读"
                    android:layout_below="@+id/title3"
                    android:textSize="@dimen/sp_12"
                    />
            </RelativeLayout>
        </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>