<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="@dimen/dp_12"
    android:paddingEnd="@dimen/dp_12"
    android:paddingBottom="@dimen/dp_12"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="图声破"
            android:textStyle="bold"
            android:layout_alignParentStart="true"
            android:textColor="@color/colorText"
            android:gravity="center"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="近期更新"
            android:layout_alignParentEnd="true"
            android:textColor="@color/colorText"
            android:layout_centerVertical="true"
            android:textSize="@dimen/sp_12"/>
    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/mygray"
        app:contentPadding="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_16"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView_tooSimple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never">

        </android.support.v7.widget.RecyclerView>

        <TextView
            android:id="@+id/chose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/pink"
            android:text="换一批"
            android:textSize="@dimen/sp_10"
            android:layout_margin="@dimen/dp_12"
            android:background="@drawable/bg_round_corner_line_pink"
            android:paddingEnd="@dimen/dp_16"
            android:paddingStart="@dimen/dp_16"
            android:paddingTop="@dimen/dp_4"
            android:paddingBottom="@dimen/dp_4"
            android:layout_below="@+id/recyclerView_tooSimple"
            />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>